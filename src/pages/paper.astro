        </Container>

        <Container>
            <Heading1 text="Date" />
            <DateDetails
                timeline="Panel Session 1 - Hybrid"
                date="2 February 2023"
                time="08:00 - 12:00 (UTC+7)"
            />
            <DateDetails
                timeline="Panel Session 2 - Virtual"
                date="2 February 2023"
                time="13:00 - 17:00 (UTC+7)"
            />
        </Container>

        <Container>
            <Heading1 text="Price" />
            <PriceContainer>
                <PriceDetails
                    category="Hybrid - Presenter and Seminar"
                    price="IDR 400,000"
                />
                <PriceDetails
                    category="Virtual - Presenter and Seminar"
                    price="IDR 300,000"
                />
                <PriceDetails category="Hybrid - Seminar" price="IDR 250,000" />
                <PriceDetails
                    category="Virtual - Seminar"
                    price="IDR 150,000"
                />
            </PriceContainer>
            <ButtonContainer>
                <ButtonLink
                    href="https://www.ncafatrilogi.id/eventregistry"
                    class="bi bi-person-fill-add"
                    title="Seminar Registration"
                    description="Click this button to regist this seminar."
                />
