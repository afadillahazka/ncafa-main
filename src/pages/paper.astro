            <Heading1 text="Moderator" />
            <ModeratorContainer>
                <ModeratorsDetails
                    src="/moderator/Dr.Nurul.png"
                    name="Dr. Nurul Aisyah Rachmawati, S.E., M.S.Ak."
                    description="Lecturer in the Trilogi University Accounting Study Program"
                    alt="Dr. Nurul"
                />
                <ModeratorsDetails
                    src="/moderator/Dr.Anies.png"
                    name="Dr. Anies Lastiati, S.E.Ak., MHRM., M.Ed.St., CA."
                    description="Deputy Chancellor for Learning and Student Affairs & Lecturer in the Trilogi University Accounting Study Program"
                    alt="Dr. Anies"
                />
