                src="/narasumber/Dr.Jamaludin.png"
                alt="Dr. Jamaludin"
                name="Dr. Jamaludin Iskak, M.Si., Ak., CA., CPA., CPI., ASEAN, CPA."
                description="Managing Partner Jamaludin, Ardi, Sukimto & Partners (JAS) Public Accountant Firm - Member of Auditrust International"
            />
            <SpeakersDetails
                src="/narasumber/ZubirAzhar.png"
                alt="Zubir Azhar"
                name="Zubir Azhar, Ph.D., FCPA., CA., ACPA."
                description="Chairperson (Accounting) - Senior Lecturer School of Management, Universiti Sains Malaysia"
            />
            <SpeakersDetails
                src="/narasumber/Dr.Sigid.png"
                alt="Dr. Sigid"
                name="Dr. Sigid Eko Pramono, S.E.Ak., MIBA., CA."
                description="Initiator of Islamic Boarding School Accounting Guidelines, Senior Economist Bank of Indonesia 2016-2021"
            />
            <SpeakersDetails
                src="/narasumber/Donny.png"
                alt="Donny Hamdani"
                name="Donny Hamdani, S.E., Ak."
                description="Director of Finance PT Penjaminan Infrastruktur Indonesia (Persero)"
            />
            <SpeakersDetails
                src="/narasumber/Nemoto.png"
                alt="Prof. Masatsugu"
                name="Prof. Masatsugu Nemoto"
                description="Research Professor, International Development Institute (IDI) Chungbuk National University, South Korea"
            />
