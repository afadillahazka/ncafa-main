import ModeratorContainer from "../layouts/Moderator/ModeratorContainer.astro";
import PriceContainer from "../layouts/Price/PriceContainer.astro";
---

<Layout title="Call for Paper">
    <main>
        <Jumbotron2
            srcdesktop="/jumbotron/callforpaper-desktop.webp"
            srcmobile="/jumbotron/callforpaper-mobile.webp"
            alt="Call for Paper"
        />
        <Container>
            <Paragraph
                paragraph="As a form of contribution to the development of accounting science in Indonesia, it was jointly initiated by the Association of Certified Fraud Examiners (ACFE) Indonesia Chapter and the Association of Public Sector Accounting Educators (APSAE) which was also supported by the Indonesian Institute of Accountants (IAI) Compartment of Accountants Educators for DKI Jakarta Region. As well as during this conference trip, it was also held in collaboration with SINTA Accredited Journals, Index Copernicus, ProQuest, DOAJ, RePec, Google Scholar."
            />
        </Container>

        <Container>
            <Heading1 text="Scope of Research" />
            
        </Container>

        <Container>
            <Heading1 text="Benefit" />
            <BenefitDetails />
        </Container>

        <Container>
            <Heading1 text="Date" />
            <DateDetails
                timeline="Submission Deadline"
                date="Friday, 20 January 2023"
                time="23:59 WIB (UTC+7)"
            />
            <DateDetails
                timeline="Announcement of Paper Accepted"
                date="Tuesday, 24 January 2023"
                time=""
            />
            <DateDetails
                timeline="Registration & Payment Deadline"
                date="Sunday, 29 January 2023"
                time=""
            />
            <DateDetails
                timeline="Parallel Session 1"
                date="Wednesday, 01 February 2023"
                time="08:00 - 12:00 (UTC+7)"
            />
            <DateDetails
                timeline="Panel Session 2"
                date="Thursday, 02 February 2023"
                time="13:00 - 17:00 (UTC+7)"
            />
        </Container>

        <Container>
            <Heading1 text="Price" />
            <PriceContainer>
                <PriceDetails
                    category="Hybrid - Presenter and Seminar"
                    price="IDR 400,000"
                />
                <PriceDetails
                    category="Virtual - Presenter and Seminar"
                    price="IDR 300,000"
                />
                <PriceDetails 
                    category="Additional Paper" 
                    price="IDR 250,000" />
            </PriceContainer>
            <ButtonContainer>
                <ButtonLink
                    href="https://www.ncafatrilogi.id/eventregistry"
                    class="bi bi-person-fill-add"
                    title="Paper Registration"
                    description="Click this button to regist this call for paper."
                />
            </ButtonContainer>
        </Container>

        <Container>
            <Heading1 text="Contact Us" />
            <ContactContainer>
                <ContactDetails
                    media="WhatsApp"
                    text="0812 8842 5931 (Zakiah)"
                    text2="   "
                    href="https://wa.me/6281288425931"
                />
                <ContactDetails
                    media="Email"
                    text="fourthncafa@gmail.com"
                    text2="   "
                    href="https://mail.google.com/mail/?view=cm&fs=1&to=fourthncafa@gmail.com"
                />
                <ContactDetails
                    media="Instagram"
                    text="@akuntansi.trilogi"
                    text2="   "
                    href="https://instagram.com/akuntansi.trilogi"
                />
            </ContactContainer>
        </Container>
    </main>
</Layout>
