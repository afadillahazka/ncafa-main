<div class="" style="background-color: rgba(255,0,0,0.1);">
    <div id="jumbotron-1"></div>
</div>

<style>
    #jumbotron-1 {
        background: url(./public/jumbotron/Website3-4-02.png) no-repeat center
            center scroll;
        background-size: cover;
        height: 80vh;
        width: 100%;
    }
</style>

<script>
    const image = document.getElementById("jumbotron-1");

    window.addEventListener("scroll", () => {
        // Calculate the new height of the image based on the current scroll position
        const newHeight = 80 - (100 * window.scrollY) / window.innerHeight;

        // Set the new height of the image
        image.style.height = `${newHeight}vh`;
    });

    // Set a timeout to delay the initial resize animation
    setTimeout(() => {
        image.style.height = "80vh";
    }, 500);
</script>
